<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_race_vs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.billy.starcraftbroodwarbuildlist.Activities.RaceVSActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/opponentracetoolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/possibleVSRecycler"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/opponentracetoolbar" />
</RelativeLayout>
